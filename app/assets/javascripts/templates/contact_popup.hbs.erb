<div id="mc_embed_signup">
  <form id="mc-embedded-subscribe-form" action="//simbiotica.us6.list-manage.com/subscribe/post?u=9f847f274fa7ec6a3b432fbf4&amp;id=bc38372597" method="post" name="mc-embedded-subscribe-form" target="_blank" novalidate="novalidate" class="validate">
    <div id="mc_embed_signup_scroll">
      <h2><%= I18n.t('join_mail_list') %></h2>
      <div class="mc-field-group">
        <div class="mc-label-group">
          <label for="mce-EMAIL"><%= I18n.t('email') %></label>
          <div class="indicates-required">required</div>
        </div>
        <input id="mce-EMAIL" type="email" value="" name="EMAIL" placeholder="Your email" class="required email" aria-required="true">
      </div>
      <div class="mc-field-group">
        <label for="mce-NAME" class="mc-label-group"><%= I18n.t('name') %></label>
        <input id="mce-NAME" type="text" value="" name="NAME" placeholder="Your name">
      </div>
      <div class="mc-field-group">
        <label for="mce-ORG" class="mc-label-group"><%= I18n.t('organization') %></label>
        <input id="mce-ORG" type="text" value="" name="ORG" placeholder="Your organization">
      </div>
      <div class="mc-field-group">
        <label for="mce-MMERGE3" class="mc-label-group"><%= I18n.t('comments') %></label>
        <input id="mce-MMERGE3" type="text" value="" name="MMERGE3">
      </div>
      <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
      <!-- <div style="position: absolute; left: -5000px;"><input type="text" name="b_9f847f274fa7ec6a3b432fbf4_bc38372597" tabindex="-1" value=""></div>-->
      <div class="clear">
        <input id="mc-embedded-subscribe" type="submit" value="Join" name="subscribe" class="button">
      </div>
      <div id="mce-responses" class="clear">
        <div id="mce-error-response" style="display:none" class="response"></div>
        <div id="mce-success-response" style="display:none" class="response"></div>
      </div>
    </div>
  </form>

  <script type="text/javascript" src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"></script>
  <script type="text/javascript">
  (function ($) {
    window.fnames = new Array();
    window.ftypes = new Array();
    fnames[0] = 'EMAIL';
    ftypes[0] = 'email';
    fnames[1] = 'NAME';
    ftypes[1] = 'text';
    fnames[2] = 'ORG';
    ftypes[2] = 'text';
    fnames[3] = 'MMERGE3';
    ftypes[3] = 'text';
  }(jQuery));
  var $mcj = jQuery.noConflicI18n.t(true);
  </script>

</div>
