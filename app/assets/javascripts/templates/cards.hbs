<div class="row -expanded">
  {{#if cards.length}}
    {{#each cards}}
      {{#if ../grid}}
        <div class="col -xs-12 -sm-12 -md-6 -lg-4">
      {{else}}
        <div class="col -xs-12 -sm-12 -md-12 -lg-12">
      {{/if}}
          <div class="js-card"></div>
        </div>
    {{/each}}
  {{else}}
    <div class="col -xs-12">
      <p>No datasets found.</p>
    </div>
  {{/if}}
</div>